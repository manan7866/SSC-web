# Frontend Environment Configuration
# Copy this file to .env.local and update the values

# Backend API Base URL - Your deployed backend URL with localhost:8000 as fallback
NEXT_PUBLIC_BACKEND_URL=https://api.sufisciencecenter.info/v1

# API Base URL - Your deployed backend URL
NEXT_PUBLIC_API_URL=https://api.sufisciencecenter.info/v1

# CMS Base URL - Your deployed CMS URL with local API route as fallback
NEXT_PUBLIC_CMS_URL=http://localhost:3010  # Update this to your local CMS port or deployed URL

# Google OAuth Client ID (if using Google authentication)
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your_google_client_id_here

# Development/Production Environment
NODE_ENV=development

# Payments (Frontend only)
# Add at least one to enable the buttons
NEXT_PUBLIC_PAYPAL_CLIENT_ID=your_paypal_client_id
NEXT_PUBLIC_PAYSTACK_PUBLIC_KEY=your_paystack_public_key

